
<section id="hero" class="hero is-medium">
            <%= render "layouts/nav" %>
            <div class="hero-body">
                <div class="container">
                    
<div class="columns is-multiline" style="margin-top:-7em">
    <div class="column is-8 is-offset-2 register">
        <div class="columns">
            <div class="column left">
                <h1 class="title is-1">Accèder à son Espace</h1>
                <h2 class="subtitle is-info is-4">Un cadre de travail Idéal.</h2>
                <%= image_tag "auth.png" %>
            </div>
            <div class="column is-4 right has-text-centered">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field control">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'input is-medium' %>
                </div>

                <div class="field control">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder:'Password', class:'input is-medium' %>
                </div>

                <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me, class: "checkbox" %>
                    <%= f.label :remember_me %>
                </div>
                <% end %>

                <div class="actions">
                    <%= f.submit "Se connecter", class: 'button is-block is-info is-fullwidth is-medium' %>
                </div>
                <% end %>

                <%= render "devise/shared/links" %>

            </div>
        </div>
    </div>
    <div class="column is-8 is-offset-2">
        <br>
        <nav class="level">
            <div class="level-left">

            </div>
            <div class="level-right">
                <small class="level-item" style="color: var(--textLight)">
                    &copy; Super Cool Website. All Rights Reserved.
                </small>
            </div>
        </nav>
    </div>
</div>
                </div>
            </div>
        </section>